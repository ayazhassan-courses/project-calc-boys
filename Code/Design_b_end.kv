WindowManager:
    MainWindow:   #Standard Window
    SecondWindow:  #Scientific Window
    ThirdWindow:    #Converter Window

<MainWindow>:
    name: "standard"
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.1
            Button:
                text: "Scientific"
                background_color: [128, 128, 128, 0.2]
                on_release:
                    app.root.current = "scientific"
                    root.manager.transition.direction = "left"
            Button:
                text: "Converter"
                background_color: [128, 128, 128, 0.2]
                on_release:
                    app.root.current = "converter"
                    root.manager.transition.direction = "left"
        BoxLayout:
            id: b_layout
            orientation: 'horizontal'
            
            
                        

<SecondWindow>:
    name: "scientific"
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.1
            Button:
                text: "Standard"
                background_color: [128, 128, 128, 0.2]
                on_release:
                    app.root.current = "standard"
                    root.manager.transition.direction = "right"
            Button:
                text: "Converter"
                background_color: [128, 128, 128, 0.2]
                on_release:
                    app.root.current = "converter"
                    root.manager.transition.direction = "left"
        BoxLayout:
            id: s_layout
            orientation:'horizontal'
            

<ThirdWindow>:
    name: "converter"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.1
            Button:
                text: "Standard"
                background_color: [128, 128, 128, 0.2]
                on_release:
                    app.root.current = "standard"
                    root.manager.transition.direction = "right"
            Button:
                text: "Scientific"
                background_color: [128, 128, 128, 0.2]
                on_release:
                    app.root.current = "scientific"
                    root.manager.transition.direction = "right"
        BoxLayout:
            id: c_layout
            orientation: "vertical"
